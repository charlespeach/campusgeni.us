<div class="hero-unit text-center">
  <%= image_tag "logo.jpg", size: "150x150", class: "main-logo" %>
  <h1> add book </h1>
  <%= form_tag book_search_path, :method => "get", :class => "form-search" do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], :class => "span4 search-query", :placeholder => "Search a 10 digit ISBN" %>
      <%= button_tag "Add a Book", :name => nil, :class => "btn" %>
    </div>
  <% end %>

</div>

<div class="hero-unit text-center">
   <h1> site search </h1>

  <%= form_tag site_search_path, :method => "get", :class => "form-search" do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], :class => "span4 search-query", :placeholder => "Search a title or ISBN" %>
      <%= button_tag "Search For Book", :name => nil, :class => "btn" %>
    </div>
  <% end %>

</div>